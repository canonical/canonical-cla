<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{{ title }}</title>
  <style type="text/css">
    @media screen {
      @font-face {
        font-family: 'Ubuntu';
        src: url('https://assets.ubuntu.com/v1/3f81ba58-ubuntu-r-webfont.ttf') format('truetype');
        font-weight: normal;
      }
      @font-face {
        font-family: 'Ubuntu';
        src: url('https://assets.ubuntu.com/v1/c232288e-ubuntu-b-webfont.ttf') format('truetype');
        font-weight: bold;
      }
    }
    body {
      font-family: Ubuntu, -apple-system, BlinkMacSystemFont, avenir next, avenir, segoe ui, helvetica neue, helvetica, Cantarell, roboto, noto, arial, sans-serif;
      line-height: 1.5;
      color: #111;
      max-width: 600px;
      margin: 0 auto;
      padding: 20px;
      border: 1px solid #e1e1e1;
      border-radius: 2px;
    }
    a {
      color: #0066cc;
    }
    ul {
      margin: 10px 0;
    }
    .p-notification {
      margin-bottom: 1.5rem;
      padding-bottom: calc(0.5rem - 1px);
      padding-left: 3rem;
      padding-top: calc(0.5rem - 1px);
      border: 1.5px solid rgba(0, 0, 0, 0.2);
      position: relative;
    }
    .p-notification::before {
      left: -1px;
      background-color: #24598f;
      content: '';
      position: absolute;
      height: auto;
      width: 0.1875rem;
      bottom: -1px;
      top: -1px;
      z-index: 1;
    }
    
    .p-notification__title {
      font-size: 1rem;
      font-weight: 550;
      line-height: 1.5rem;
      margin: 0;
      padding: 0;
    }
  </style>
</head>
